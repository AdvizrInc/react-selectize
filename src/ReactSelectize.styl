@require 'DropdownMenu'
@require 'ResizableInput'

.react-selectize
    color black
    background-color white
    border-radius 4px
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    user-select none
    position relative

    &:not(.tethered)
        width 300px

    &.disabled
        pointer-events none

    .react-selectize-control
        border 1px solid
        border-color #d9d9d9 #cccccc #b3b3b3
        border-radius 4px
        cursor pointer
        font-size 1em
        padding 2px 52px 2px 5px
        position relative
        z-index 9

        .react-selectize-placeholder
            color #aaaaaa
            padding 8px 0px 8px 10px
            max-width calc(100% - 52px)
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            position absolute
            top 0
            left 0px        

        .react-selectize-arrow
            border-style solid
            content " "
            display block
            height 0px
            position absolute
            right 10px
            top 14px
            width 0px

        .react-selectize-reset
            color #999999
            cursor pointer
            display inline-block
            font-size 16px
            padding 6px 10px
            position absolute
            right 17px
            top 0
            &:hover
                color #c0392b
        
        .value-wrapper
            display inline-block
    
    &.flipped

        .react-selectize-arrow
            border-color transparent transparent #999999
            border-width 0 5px 5px

        &.open

            .react-selectize-control
                border-top none
                border-bottom-left-radius 4px
                border-bottom-right-radius 4px
                border-top-left-radius 0px
                border-top-right-radius 0px

                .react-selectize-arrow
                    border-color #999999 transparent transparent
                    border-width 5px

    &:not(.flipped)
        
        .react-selectize-arrow
            border-color #999999 transparent transparent
            border-width 5px
        
        &.open   
            
            .react-selectize-control
                border-bottom none
                border-bottom-left-radius 0px
                border-bottom-right-radius 0px
                border-top-left-radius 4px
                border-top-right-radius 4px
                
                .react-selectize-arrow
                    border-color transparent transparent #999999
                    border-width 0 5px 5px