@require 'base'

.react-selectize.bootstrap3
    color black
    background-color white
    font-family Helvetica Neue, Helvetica, Arial, sans-serif

    &:not(.tethered)
        width 300px

    &.open .react-selectize-control
        border 1px solid #66afe9
        box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6)

    .react-selectize-control
        border 1px solid
        border-color #d9d9d9 #cccccc #b3b3b3
        border-radius 4px
        font-size 1em

        // this controls the height of the select 
        > div
            min-height 30px

        .react-selectize-placeholder
            color #aaa
            text-indent 8px

        .react-selectize-selected-values
            padding-left 5px

        .react-selectize-reset-container:hover .react-selectize-reset path
            stroke #c0392b

        .react-selectize-reset path
            transition stroke 0.5s 0s ease

// DROPDOWN MENU (in document.body when @props.tether is true)
.react-selectize.dropdown-menu-container.bootstrap3
    font-family Helvetica Neue, Helvetica, Arial, sans-serif
    width 300px

    &.flipped
        margin-bottom 5px

    &:not(.flipped)
        margin-top 5px
    
    .dropdown-menu
        
        &.custom-enter-active, &.custom-leave-active
            transition opacity 0.2s 0s ease

        &.custom-enter
            opacity 0
        
        &.custom-enter-active
            opacity 1
        
        &.custom-leave
            opacity 1

        &.custom-leave-active
            opacity 0

.react-selectize.dropdown-menu.bootstrap3
    background white
    box-sizing border-box
    border 1px solid #ccc
    border-radius 4px
    box-shadow 0 6px 12px rgba(0, 0, 0, 0.175)
    font-family Helvetica Neue, Helvetica, Arial, sans-serif

    &.flipped
        margin-bottom 5px

    &:not(.flipped)
        margin-top 5px

    .no-results-found
        color #aaa !important
        font-style oblique
        padding 8px 10px
        &.red
            color red !important

    .simple-group-title
        background-color #fafafa
        padding 8px 8px

    .option-wrapper

        &.highlight
            background #428bca

            .simple-option
                color #fff

        .simple-option
            color #333
            cursor pointer
            padding 8px 10px

            &.not-selectable
                background-color #f8f8f8
                color #999
                cursor default
                font-style oblique
                text-shadow 0px 1px 0px white


// MULTI SELECT
.react-selectize.multi-select.bootstrap3 

    .simple-value
        background #efefef
        border-radius 4px
        color #333
        display inline-block
        margin 2px
        vertical-align middle

        span
            cursor pointer
            display inline-block
            padding 2px 5px 4px
            vertical-align top

// SIMPLE SELECT
.react-selectize.simple-select.bootstrap3
    
    .simple-value
        display inline-block
        margin 2px
        vertical-align middle

        span
            cursor default
            display inline-block
            vertical-align top